# Server settings
SERVER_PORT=8080
WEBSOCKET_PORT=8081

# Database connection configuration
DATABASE_URL=postgres://user:password@localhost:5433/sopostavmenya?sslmode=disable

# JWT configuration (secret and token lifetime, time is specified in minutes or seconds according to implementation)
JWT_SECRET=verysecretkey
JWT_EXPIRES_IN=60
JWT_REFRESH_EXPIRES_IN=10080  # time in minutes (7 days)

# Path for profile image uploads
MEDIA_UPLOAD_DIR=./static/images

# Application environment and CORS
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080

# SMTP settings for sending email (if needed)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=secretpassword

# Redis configuration (for caching, online status tracking, etc.)
REDIS_URL_old=redis://localhost:6379
REDIS_URL=localhost:6379
REDIS_TIMEOUT=5

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Additional setting: maximum number of recommendations returned to the user per request
RECOMMENDATIONS_LIMIT=10

POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sopostavmenya
DB_PORT=5433
