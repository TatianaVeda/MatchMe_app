# Настройки сервера
SERVER_PORT=8080
WEBSOCKET_PORT=8081

# Конфигурация подключения к базе данных 
DATABASE_URL=postgres://user:password@localhost:5433/sopostavmenya?sslmode=disable

# Конфигурация JWT (секрет и время жизни токена, время указано в минутах или секундах, согласно реализации)
JWT_SECRET=verysecretkey
JWT_EXPIRES_IN=60
JWT_REFRESH_EXPIRES_IN=10080  # время в минутах (7 дней)


# Путь для загрузки изображений профиля
MEDIA_UPLOAD_DIR=./static/images

# Окружение приложения и CORS
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080

# Настройки SMTP для отправки email (если потребуется)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=secretpassword

# Конфигурация Redis (для кеширования, отслеживания статуса "онлайн" и прочего)
REDIS_URL=redis://localhost:6379
REDIS_TIMEOUT=5

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=debug

# Дополнительная настройка: максимальное количество рекомендаций, выдаваемых пользователю за один запрос
RECOMMENDATIONS_LIMIT=10

POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sopostavmenya
DB_PORT=5433
